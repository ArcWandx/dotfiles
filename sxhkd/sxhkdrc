# ===== Quick Open =====
super + F1
	firefox
super + F2
	discord
super + F3
	kitty nvim

super + e
	thunar


# ===== Notifications =====
super + v ; x
	dunstctl close-all
super + v ; p
	dunstctl history-pop


# ===== Top bar =====
# Hide Polybar
super + shift + p
	polybar-msg cmd toggle

# Toggle Polybar date
super + alt + d
	polybar-msg action "#date.toggle"

# Network menu
super + alt + n
	$HOME/.config/rofi/rofi-network-manager/rofi-network-manager.sh


# ===== Rofi Bindings =====
# program launcher
super + d
	~/.config/rofi/launch.sh

# Clipboard history
super + alt + v
	rofi -modi "clipboard:greenclip print" -show clipboard -theme-str '#window \{y-offset: 200; \}'

# Emoji picker
super + period
	/usr/bin/rofimoji
super + semicolon
	/usr/bin/rofimoji

# Unicode picker
super + shift + u
	/usr/bin/rofimoji --files all --action copy-unicode


# ===== Desktop Environment =====
# Lock screen
super + shift + x
	betterlockscreen --lock dimblur --off 20

# Screenshot
super + shift + s
	flameshot gui
Print
	flameshot gui


# ===== Terminal =====
# Terminal emulator
super + Return
	exo-open --launch TerminalEmulator

# Floating terminal
super + shift + Return
	kitty --class floating_kitty


# ===== Bspwm Hotkeys =====
# Quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# Close and kill
super + {_,shift + }w
	bspc node -{c,k}

# Alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# Make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


# ===== Movement =====
# Focus/swap the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east} --follow

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Move the current window to the next monitor
super + ctrl + shift + {h,j,k,l}
	bspc node -m {west,wouth,north,east} --follow

# Move current window to a pre-selected space
super + shift + m
    bspc node -n last.!automatic

# Swap the current node and the biggest window
super + g
	bspc node -s biggest.local.window


# ===== Cyclic =====
# Focus the next/previous window in the current desktop
super + {_,shift + }q
	bspc node -f {next,prev}.local.!hidden.window

# Focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last
# Focus the last node on current desktop
alt + Tab
	bspc node -f last
	# bspc node -f last.local

# Rotate tree
super + shift + {d,a}
    bspc node @/ -C {forward,backward}

# Focus the next monitor
super + alt + Tab
	bspc monitor -f next

# Move node to the next monitor
super + alt + shift + Tab
	bspc node -m next --follow

# Focus the node for the given path jump
super + {p,comma}
	bspc node -f @{parent,first}


# ===== Desktops =====
# Focus, send to, or swap adjacent desktops
super + {_,shift + ,ctrl + }bracket{left,right}
	bspc {desktop -f,node -d,desktop -s} {prev,next}.local --follow

# Focus or send to the given desktop
super + {_,shift + }{_,alt + }{1-9,0}
	bspc {desktop -f,node -d} {focused,next}:'^{1-9,10}'

# Swap two desktops
super + ctrl + {_,alt + }{1-9,0}
	bspc desktop -s {focused,next}:'^{1-9,10}' --follow

# Swap desktop to next monitor
super + ctrl + alt + Tab
	bspc desktop -s next:focused --follow


# ===== State =====
# Expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
# Contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Set the window state
super + {t,shift + t,f,s}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


# ===== Preselect =====
# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


# ===== Multimedia Keys =====
# Calculator
XF86Calculator
	galculator

# Brightness
XF86MonBrightnessDown
	xbacklight -dec 5
XF86MonBrightnessUp
	xbacklight -inc 5

# Volume Control
XF86AudioLowerVolume
    amixer set Master unmute; \
    amixer set Master 5%-
XF86AudioRaiseVolume
    amixer set Master unmute; \
    amixer set Master 5%+
XF86AudioMute
	amixer set Master toggle

# Play/Pause
XF86AudioPlay
	playerctl play-pause

# Next/Previous
XF86AudioPrev
	playerctl previous
XF86AudioNext
	playerctl next
shift + XF86AudioLowerVolume
	playerctl previous
shift + XF86AudioRaiseVolume
	playerctl next


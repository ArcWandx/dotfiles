# ===== Tabbed =====
# super + t             base chord for all tabbed manipulation
#   t                   (create) create new tabbed container on focused window
#   r                   (detach) remove focused window from tabbed container
#   shift + r           (detach --all) remove all windows from tabbed container
#   e                   (embed) attach next opened window to focused window
#   z                   (embed terminal) attach a terminal to focused window
#   {h,j,k,l}           (create) merge focused tabbed/window with target tabbed/window
#   arrows              (transfer) attach focused window with target tabbed/window

super + t; t
	bsptab-rs create focused
super + t; r
	bsptab-rs detach focused
super + t; shift + r
	bsptab-rs detach --all focused
super + t; e
	bsptab-rs embed focused
super + t; {h,j,k,l}
	bsptab-rs create focused {west,south,north,east}
super + t; {Left,Down,Up,Right}
	bsptab-rs transfer focused {west,south,north,east}

# ===== Quick Open =====
alt + F1
	firefox
alt + F2
	discord
alt + F3
	kitty nvim

super + e
	thunar


# ===== Notifications =====
super + n ; {super + ,_}x
	dunstctl close-all
super + n ; {super + ,_}p
	dunstctl history-pop
super + n; {super + ,_}Return
	dunstctl action


# ===== Top bar =====
# Show/hide polybar
super + p; {super + ,_}h
	polybar-msg cmd toggle && bspc config top_padding 0

# Toggle Polybar date
super + p; {super + ,_}d
	polybar-msg action "#date.toggle"

# Network menu
super + p; n
	$HOME/.config/rofi/rofi-network-manager/rofi-network-manager.sh
super + p; super + n
	$HOME/.config/rofi/rofi-network-manager/rofi-network-manager.sh


# ===== Rofi Bindings =====
# program launcher
super + d
	~/.config/rofi/launcher.sh

# Window switcher
super + i
	~/.config/rofi/windows.sh

# Window switcher (local)
super + alt + i
	~/.config/rofi/windowcd.sh

# Clipboard history
super + v
	rofi -modi "clipboard:greenclip print" -show clipboard -theme-str '#window \{y-offset: 200; \}'

# Emoji picker
super + semicolon
	/usr/bin/rofimoji

# Unicode picker
super + shift + u
	/usr/bin/rofimoji --files all
super + alt + u
	/usr/bin/rofimoji --files all --action copy-unicode

# Show help
super + slash
    ~/.config/sxhkd/sxhkd-help


# ===== Desktop Environment =====
# Lock screen
super + shift + x
	betterlockscreen --lock dimblur --off 20

# Screenshot
super + shift + s
	flameshot gui
Print
	flameshot gui


# ===== Terminal =====
# Terminal emulator
super + Return
	exo-open --launch TerminalEmulator

# Floating terminal
super + shift + Return
	kitty --class floating_kitty


# ===== Bspwm Hotkeys =====
# Quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# Close and kill
super + {_,shift + }w
	bspc node -{c,k}

# Alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# Make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


# ===== Movement =====
# Focus/swap the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east} --follow

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Move the current window to the next monitor
super + ctrl + shift + {h,j,k,l}
	bspc node -m {west,wouth,north,east} --follow

# Move current window to a pre-selected space
super + shift + m
	bspc node -n last.!automatic

# Swap the current node and the biggest window
super + g
	bspc node -s biggest.local.window


# ===== Cyclic =====
# Focus the next/previous window in the current desktop
super + {_,shift + }q
	bspc node -f {next,prev}.local.!hidden.window

# Focus the last desktop
super + Tab
	bspc desktop -f last.local
# Focus the last node
super + grave
	bspc node -f last
# Focus the last node on current desktop
alt + Tab
	bspc node last.local -g marked=on; bspc node any.active.\!local -g marked=on;\
	bspc node -f last.marked; bspc node any.marked -g marked=off

# Rotate tree
super + shift + {d,a}
	bspc node @/ -C {forward,backward}

# Focus the next monitor
super + alt + Tab
	bspc monitor -f next

# Move node to the next monitor
super + alt + shift + Tab
	bspc node -m next --follow

# Focus the node for the given path jump
super + {period,comma}
	bspc node -f @{parent,first}


# ===== Desktops =====
# Focus, send to, or swap adjacent desktops
super + {_,shift + ,ctrl + }bracket{left,right}
	bspc {desktop -f,node -d,desktop -s} {prev,next}.local --follow

# Focus or send to the given desktop
super + {_,shift + }{_,alt + }{1-9,0}
	bspc {desktop -f,node -d} {focused,next}:'^{1-9,10}'

# Swap two desktops
super + ctrl + {_,alt + }{1-9,0}
	bspc desktop -s {focused,next}:'^{1-9,10}' --follow

# Swap desktop to next monitor
super + ctrl + alt + Tab
	bspc desktop -s next:focused --follow


# ===== State =====
# Expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
# Contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Toggle floating/tiled
super + f
	bspc query -N -n focused.floating &&\
		bspc node -t tiled ||\
		bspc node -t floating

# Toggle fullscreen/tiled
super + s
	bspc query -N -n focused.fullscreen &&\
		bspc node -t tiled ||\
		bspc node -t fullscreen

# Toggle fullscreen/tiled
F11
	bspc query -N -n focused.fullscreen &&\
		bspc node -t tiled ||\
		bspc node -t fullscreen

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Always on screen
super + alt + p
	bspc node -g sticky


# ===== Preselect =====
# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


# ===== Multimedia Keys =====
# Calculator
XF86Calculator
	kitty --class=floating_kitty -- python3

# Brightness
XF86MonBrightnessDown
	xbacklight -dec 5
XF86MonBrightnessUp
	xbacklight -inc 5

# Volume Control
XF86AudioLowerVolume
	~/scripts/volume.sh -5
XF86AudioRaiseVolume
	~/scripts/volume.sh +5
XF86AudioMute
	amixer set Master toggle

# Play/Pause
XF86AudioPlay
	~/.config/mpv/pause-play.sh ||\
	playerctl play-pause

# Next/Previous
XF86AudioPrev
	~/.config/mpv/playlist-prev.sh ||\
	playerctl previous
XF86AudioNext
	~/.config/mpv/playlist-next.sh ||\
	playerctl next
shift + XF86AudioLowerVolume
	~/.config/mpv/playlist-prev.sh ||\
	playerctl previous
shift + XF86AudioRaiseVolume
	~/.config/mpv/playlist-next.sh ||\
	playerctl next


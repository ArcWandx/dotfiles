#
# Quick Open
#

super + F1
	firefox

super + F2
	kitty nvim

super + F3
	discord

#
# wm independent hotkeys
#

# terminal emulator
super + Return
	exo-open --launch TerminalEmulator

# Floating terminal
super + shift + Return
	kitty --class floating_kitty

# program launcher
super + @space
	rofi -show drun -theme "~/.config/rofi/launchers/type-7/style-8.rasi"

# File launcher
super + shift + @space
	rofi -show file-browser-extended -theme "~/.config/rofi/launchers/type-7/style-8.rasi"

# # Alt + tab for windows
# alt + Tab
	# rofi -show window -theme "~/.config/rofi/launchers/type-7/style-8.rasi"

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Help menu
super + slash
	/home/arcwand/.scripts/sxhkd-help

# Clipboard history
super + alt + v
	rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# Lock screen
super + shift + x
	betterlockscreen -l

# Screenshot
super + shift + s
	flameshot gui

#
# Multimedia Keys
#

# Calculator
XF86Calculator
	galculator

# Brightness
XF86MonBrightnessDown
	xbacklight -dec 5
XF86MonBrightnessUp
	xbacklight -inc 5

# Volume Control
XF86AudioLowerVolume
    amixer set Master unmute; \
    amixer set Master 5%-
XF86AudioRaiseVolume
    amixer set Master unmute; \
    amixer set Master 5%+
XF86AudioMute
	amixer set Master toggle

# Play/Pause
XF86AudioPlay
	playerctl play-pause

# Next/Previous
XF86AudioPrev
	playerctl previous
XF86AudioNext
	playerctl next
shift + XF86AudioLowerVolume
	playerctl previous
shift + XF86AudioRaiseVolume
	playerctl next

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.local.window

#
# state/flags
#

# set the window state
super + {t,shift + t,f,s}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window
super + {_,shift + }q
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# Move current window to a pre-selected space
super + shift + m
    bspc node -n last.!automatic

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# Move a node to another monitor
super + ctrl + shift + {h,j,k,l}
	bspc node -m {west,south,north,east} --follow

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Move the current window to the next monitor
super + ctrl + shift + {h,j,k,l}
	bspc node -m "${west,wouth,north,east}" --follow

# Rotate tree
super + shift + {d,a}
    bspc node @/ -C {forward,backward}
